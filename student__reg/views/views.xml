<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="student__reg.list">
      <field name="name">Student_Reg list</field>
      <field name="model">student__reg.student__reg</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="student__reg.action_window">
      <field name="name">Student_Reg window</field>
      <field name="res_model">student__reg.student__reg</field>
      <field name="view_mode">list,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="student__reg.action_server">
      <field name="name">Student_Reg server</field>
      <field name="model_id" ref="model_student__reg_student__reg"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Student_Reg" id="student__reg.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="student__reg.menu_1" parent="student__reg.menu_root"/>
    <menuitem name="Menu 2" id="student__reg.menu_2" parent="student__reg.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="student__reg.menu_1_list" parent="student__reg.menu_1"
              action="student__reg.action_window"/>
    <menuitem name="Server to list" id="student__reg" parent="student__reg.menu_2"
              action="student__reg.action_server"/>

  </data>
</odoo>
